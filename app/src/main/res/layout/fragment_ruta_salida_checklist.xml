<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/gral"
    tools:context=".RutaSalidaChecklistFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/transporte_asignado_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporte asignado:" />

            <TextView
                android:id="@+id/transporte_asignado_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="JU34444"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutas asignadas:" />

            <TextView
                android:id="@+id/rutas_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Sur, Norte"
                android:textStyle="bold" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Checklist de la unidad" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="330dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/salida_aguaEnTanqueDeRecuperacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agua en tanque de recuperación" />

                <CheckBox
                    android:id="@+id/salida_lucesGenerales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luces generales" />

                <CheckBox
                    android:id="@+id/salida_liquidoDeFrenos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Líquido de frenos" />

                <CheckBox
                    android:id="@+id/salida_aceiteDeMotor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceite de motor" />

                <CheckBox
                    android:id="@+id/salida_nivelDeAguaEnRadiador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nivel de agua en radiador" />

                <CheckBox
                    android:id="@+id/salida_aguaEnTanqueDeParabrisas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agua en tanque de parabrisas" />

                <CheckBox
                    android:id="@+id/salida_hulesDeLimpiaParabrisas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hules de limpia parabrisas" />

                <CheckBox
                    android:id="@+id/salida_presionDeLlantas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presión de llantas" />

                <CheckBox
                    android:id="@+id/salida_aditamientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aditamientos" />

                <CheckBox
                    android:id="@+id/salida_accesorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accesorios" />

                <CheckBox
                    android:id="@+id/salida_cruceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cruceta" />

                <CheckBox
                    android:id="@+id/salida_gato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gato" />

                <CheckBox
                    android:id="@+id/salida_extintor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extintor" />

                <CheckBox
                    android:id="@+id/salida_llantasDeRefaccion"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llantas de refacción" />

                <CheckBox
                    android:id="@+id/salida_candado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candado" />

                <CheckBox
                    android:id="@+id/salida_limpiezaGeneralDeUnidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpieza general de unidad" />

                <CheckBox
                    android:id="@+id/salida_techo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Techo" />

                <CheckBox
                    android:id="@+id/salida_puertas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puertas" />

                <CheckBox
                    android:id="@+id/salida_vidrios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vidrios" />

                <CheckBox
                    android:id="@+id/salida_defensa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Defensa" />

                <CheckBox
                    android:id="@+id/salida_fascia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fascia" />

                <CheckBox
                    android:id="@+id/salida_faros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faros" />

                <CheckBox
                    android:id="@+id/salida_retrovisores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retrovisores" />
                <CheckBox
                    android:id="@+id/salida_manijasDeCamper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manijas de camper" />

                <CheckBox
                    android:id="@+id/salida_asientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asientos" />

                <CheckBox
                    android:id="@+id/salida_tablero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tablero" />

            </LinearLayout>
        </ScrollView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_checkSalidaRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK" />

    </LinearLayout>

</FrameLayout>